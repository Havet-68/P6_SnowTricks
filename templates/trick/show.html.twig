{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}

<div class="container">

    <div class="row justify-content-center">
            <div class="col-6">
                <h1 class="text-center">{{trick.name}}</h1>
                <h2 class='text-center'>{{trick.difficulty}}</h2>
                <h2 class='text-center'>{{trick.trickGroup}}</h2>

                <br><br>
                <p>{{trick.content|raw}}</p>
