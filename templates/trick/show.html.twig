    <a href="{{ path('trick_index') }}">Retour à la liste</a>

    {# <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a> #}


    {% if is_granted("ROLE_USER") %}
        {{ include('comment/_commentForm.html.twig') }}
    {% endif %}
   
    {% for comment in comments %} 
        <div class="col-md-6 mb-5">
            <div class="mb-1 text-muted">{{comment.user}}</div>
            <p class="card-text mb-auto">{{comment.content}}</p>
            <p class="card-text mb-auto">{{comment.createdAt|date("d/m/Y")}}</p>
        </div>
    {% endfor %}

